@model StudentNav.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
  <div class="row">  
      <div class="col-lg-12">          
          <div class="row">
              <div class="col-lg-6">
                  @if (Model.HasPassword)
                  {
                      <a href="/Manage/ChangePassword" role="button" class="btn paper-raise">ChangePassword</a>
                  }
                  else
                  {
                      <a href="/Manage/SetPassword" role="button" class="btn paper-raise">Create Password</a>
                  }

              </div>
              <div class="col-lg-6">

                      <a href="/Manage/EditProfile" role="button" class="btn paper-raise">Edit Profile</a>
             
              </div>
              </div>
@if (Html.Action("GetUserRole", "Manage").ToString() != "User")
{
          <div class="row">
              <div class="col-lg-6"><a href="/Manage/FileUploads" role="button" class="btn paper-raise">Upload File</a> </div>
              <div class="col-lg-6"><a href="/Manage/AssignRoles" role="button" class="btn paper-raise">Assign Roles</a> </div>
         </div>
        <div class="row">
            <div class="col-lg-6"><a href="/Articles/Index" role="button" class="btn paper-raise">Edit Articles</a> </div>
            <div class="col-lg-6"><a href="/Manage/Users" role="button" class="btn paper-raise">All Users</a> </div>
        </div>
        <div class="row">
            <div class="col-lg-6"><a href="/Manage/SuspendUser" role="button" class="btn paper-raise">Suspend User</a> </div>
            <div class="col-lg-6"><a href="/SponsorLinks/Create" role="button" class="btn paper-raise">Create SponsorLinks</a> </div>
        </div>
    
       
}
</div>

